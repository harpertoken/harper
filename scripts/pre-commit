#!/bin/bash

# Comprehensive pre-commit hook for Harper
# Runs the full validation suite before allowing commits

echo "Running comprehensive Harper pre-commit validation..."

# Check if we're in the right directory
if [ ! -f "Cargo.toml" ]; then
    echo "Error: Not in Harper project root (Cargo.toml not found)"
    exit 1
fi

# Run the comprehensive validation script
if [ -f "scripts/validate.sh" ]; then
    if ! bash scripts/validate.sh; then
        echo ""
        echo "Pre-commit validation failed!"
        echo "Fix the issues above before committing"
        echo "Or run 'bash scripts/validate.sh' for detailed output"
        exit 1
    fi
else
    echo "Warning: Validation script not found, running basic checks..."

    # Fallback to basic checks
    if ! cargo check --quiet; then
        echo "cargo check failed"
        exit 1
    fi

    if ! cargo clippy --quiet -- -D warnings; then
        echo "cargo clippy failed"
        exit 1
    fi

    if ! cargo test --quiet; then
        echo "cargo test failed"
        exit 1
    fi
fi

echo ""
echo "All pre-commit checks passed!"
echo "Your code is ready for commit"
exit 0
